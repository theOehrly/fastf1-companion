{
  "manifest_version": 3,
  "name": "FastF1 Companion",
  "version": "0.0.1",
  "icons": {
    "32": "icon.png",
    "64": "icon@2x.png"
  },
  "description": "Companion extension for authenticating FastF1 with you formula1.com / F1TV account.",
  "permissions": [
    "cookies"
  ],
  "host_permissions": [
    "*://localhost/*",
    "*://*.formula1.com/*",
    "*://*.fastf1.dev/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "@companion.fastf1",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}